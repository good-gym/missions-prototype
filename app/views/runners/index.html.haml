.container
  .title-with-button
    %h1 All Runners
    = link_to "New runner", new_runner_path, class: "btn btn-secondary btn-sm"

  .list-group
    - @runners.each do |runner|
      .list-group-item.d-flex.justify-content-between.align-items-center
        = link_to runner.name, runner
        %span.badge.badge-secondary= runner.availabilities.count
